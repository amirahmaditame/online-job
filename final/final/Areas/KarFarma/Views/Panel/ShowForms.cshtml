@model DataLayer.FormTB
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowForms</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h4>Employee Resume</h4>

    <table style="width:100%">
        <tr>
            <th>CompanyName</th>
            <td>@Model.CompanyName</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>

        <tr>
            <th>Region</th>
            <td>@Model.Region</td>
        </tr>

        <tr>
            <th>Working Days</th>
            <td>@Model.WorkingDays</td>
        </tr>

        <tr>
            <th>Requirements</th>
            <td>@Model.FormText</td>
        </tr>
        <tr>
            <th>Benifits</th>
            <td>@Model.Benefits</td>
        </tr>
        <tr>
            <th>Gender</th>
            @if (Model.Gender == null)
            {

                <td>Male-Female</td>
            }
            else
            {
                <td>@Model.Gender</td>
            }
        </tr>

    </table>

</body>
</html>
