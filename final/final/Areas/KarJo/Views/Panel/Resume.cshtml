@{
    ViewBag.Title = "Resume";
    Layout = "~/Areas/KarJo/Views/Shared/_LayoutKarjo.cshtml";
}
<div class="form-widget ls-widget ">
    <div class="widget-title"><h4><span class="icon flaticon-user"></span>Your Resume</h4></div>
    <div class="widget-content">
        <!-- Comment Form -->
        <div class="default-form">
            <!--Comment Form-->
            <form id="formemloyee">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" id="Firstname" placeholder=" " value=" " required>
                    <span class="icon fab"></span>
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" id="Lastname" placeholder=" " value=" " required>
                    <span class="icon fab "></span>
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input type="text" id="Age" placeholder=" " value=" " required>
                    <span class="icon fab fa-instagram"></span>
                </div>
                <div class="radio-outer margin-top-10">
                    <label>Gender</label>
                    <div class="checkbox-outer">
                        <ul class="checkboxes">
                            <li>
                                <input id="check-c1" type="checkbox" name="Male" onclick="selectOnlyThisForC(this,this.id)">
                                <label for="check-c1">Male</label>
                            </li>
                            <li>
                                <input id="check-c2" type="checkbox" name="Female" onclick="selectOnlyThisForC(this,this.id)">
                                <label for="check-c2">Female</label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                    <label>Education Degree</label>
                    <div class="checkbox-outer">
                        <ul class="checkboxes">
                            <li>
                                <input id="check-a1" type="checkbox" name="Bachelor" onclick="selectOnlyThisForA(this,this.id)">
                                <label for="check-a1">Bachelor</label>
                            </li>
                            <li>
                                <input id="check-a2" type="checkbox" name="Master" onclick="selectOnlyThisForA(this,this.id)">
                                <label for="check-a2">Master</label>
                            </li>
                            <li>
                                <input id="check-a3" type="checkbox" name="Phd" onclick="selectOnlyThisForA(this,this.id)">
                                <label for="check-a3">PHD</label>
                            </li>
                        </ul>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label>Ability Description</label>
                    <input type="text" id="AbilityDescription" placeholder=" " value=" " required>
                    <span class="icon fab"></span>
                </div>
                <div class="form-group">
                    <label>English Ability</label>
                    <div class="checkbox-outer">
                        <ul class="checkboxes">
                            <li>
                                <input id="check-b1" type="checkbox" name="YES" onclick="selectOnlyThisForB(this,this.id)">
                                <label for="check-b1">YES</label>
                            </li>
                            <li>
                                <input id="check-b2" type="checkbox" name="NO" onclick="selectOnlyThisForB(this,this.id)">
                                <label for="check-b2">NO</label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                    <label>Extra Ability</label>
                    <input type="text" id="ExtraAbility" placeholder=" " value=" " required>
                    <span class="icon fab fa-instagram"></span>
                </div>
                <div class="form-group">
                    <button class="theme-btn btn-style-two" id="submit-form">Save Changes</button>
                </div>
            </form>
        </div>
        <!--End Comment Form -->
    </div>
</div>
@section PageScript{
    <script>
        var gender;
        var english;
        var edu;
        function selectOnlyThisForA(e,id) {
            for (var i = 1; i <= 3; i++) {
                document.getElementById("check-a" + i).checked = false;
            }
            document.getElementById(id).checked = true;
            edu = $(e).attr("name");
        }
        
        function selectOnlyThisForB(e, id) {
            for (var i = 1; i <= 2; i++) {
                document.getElementById("check-b" + i).checked = false;
            }
            document.getElementById(id).checked = true;
            english = $(e).attr("name");
            if (english == "YES") {
                english = "True";
            }
            else {
                english = "False";
            }
        }
        function selectOnlyThisForC(e, id) {
            for (var i = 1; i <= 2; i++) {
                document.getElementById("check-c" + i).checked = false;
            }
            document.getElementById(id).checked = true;
            gender = $(e).attr("name");
        }
        $(function () {
            $(document).ready(function () {
                $(document).on("click", "#submit-form", function (e) {

                    $.ajax({
                        type: "POST",
                        url: "/KarJo/Panel/AddResume",
                        data: JSON.stringify({
                            Firstname: $("#Firstname").val(),
                            Latname: $("#Lastname").val(),
                            Age: $("#Age").val(),
                            Gender: gender,
                            EduDegree: edu,
                            AbilityDescription: $("#AbilityDescription").val(),
                            EnglishAbility: english,
                            ExtraAbility: $("#ExtraAbility").val(),
                        }),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (e) {
                            if (e.Status) {
                                alert('ok!');
                            }
                            else {
                                alert('false');

                            }
                        },
                        error: function () {
                            alert('khata');
                        }
                    });
                });

            });
        });
    </script>
}

